<div class="max-w-2xl mx-auto">
  {{! Content holder - for visual styling only }}
  <div class="bg-white rounded-xl shadow-lg border border-gray-100">
    {{! Title section }}
    <header class="p-8 pb-4">
      <h1 class="text-2xl font-bold text-center text-gray-900">
        {{screen.texts.title}}
      </h1>
    </header>
    
    {{! Error messages section }}
    {{> shared/error-messages}}
    
    {{! User identifier section }}
    {{> shared/identifier-field 
      label=screen.texts.emailPlaceholder
      value=screen.data.username
      editText=screen.texts.editEmailText
      editUrl=screen.links.edit_identifier
      icon='<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 12a4 4 0 10-8 0 4 4 0 008 0zm0 0v1.5a2.5 2.5 0 005 0V12a9 9 0 10-9 9m4.5-1.206a8.959 8.959 0 01-4.5 1.207"></path>'
    }}

    {{! Form content }}

    <form id="loginForm" class="p-8" role="form">
      <fieldset class="flex flex-col gap-y-6">
        
        {{! Password input field }}
        {{> passwordField 
          fieldId="loginPassword"
          name="password"
          label=screen.texts.passwordPlaceholder
          placeholder=screen.texts.passwordPlaceholder
          autocomplete="current-password"
          required=true
        }}

        {{! Password reset link }}
        <div class="text-center">
          <a href="{{screen.links.reset_password}}" id="forgotPasswordLink" class="text-lg text-indigo-600 hover:text-indigo-500">
            {{screen.texts.forgotPasswordText}}
          </a>
        </div>

        {{! Submit button }}
        <button
          type="submit"
          id="btnlogin"
          class="w-full py-3 px-6 text-lg font-medium text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500 rounded-lg"
        >
          {{screen.texts.buttonText}}
        </button>
      </fieldset>
    </form>
  </div>
</div>
