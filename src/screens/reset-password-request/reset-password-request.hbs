<div class="flex flex-col items-center">
  <h1 class="text-2xl font-bold mb-4">{{screen.texts.title}}</h1>
  <p class="text-gray-600 mb-6 text-center">{{screen.texts.description}}</p>

  {{> shared/error-messages errors=screen.errors}}

  <form id="resetPasswordRequestForm" class="w-full max-w-sm">
    <div class="mb-4">
      {{> shared/input-field 
        id='email'
        name='email'
        type='email'
        label=screen.texts.emailLabel
        placeholder=screen.texts.emailPlaceholder
        required=true
        autocomplete='email'
        value=untrustedData.submittedFormData.username
      }}
    </div>

    <button type="submit" class="w-full bg-blue-600 text-white py-2 rounded-md hover:bg-blue-700 transition duration-200">
      {{screen.texts.buttonText}}
    </button>
  </form>

  <div class="mt-4">
    <a href="#" id="backToLoginLink" class="text-sm text-blue-600 hover:underline">
      {{screen.texts.backLinkText}}
    </a>
  </div>
</div>
