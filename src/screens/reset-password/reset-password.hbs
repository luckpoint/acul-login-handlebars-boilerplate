<div class="flex flex-col items-center">
  <h1 class="text-2xl font-bold mb-4">{{screen.texts.title}}</h1>
  <p class="text-gray-600 mb-6 text-center">{{screen.texts.description}}</p>

  {{> shared/error-messages errors=screen.errors}}

  <form id="resetPasswordForm" class="w-full max-w-sm">
    <div class="mb-4">
      {{> shared/password-field 
          fieldId="password" 
          name="password-reset" 
          label=screen.texts.passwordLabel
          placeholder=screen.texts.passwordPlaceholder
          policy=transaction.passwordPolicy
          errors=screen.errors
      }}
    </div>
    <div class="mb-6">
      {{> shared/password-field 
          fieldId="re-enter-password" 
          name="re-enter-password"
          label=screen.texts.passwordConfirmationLabel
          placeholder=screen.texts.passwordConfirmationPlaceholder
          errors=screen.errors
      }}
    </div>
    <button type="submit" class="w-full bg-blue-600 text-white py-2 rounded-md hover:bg-blue-700 transition duration-200">
      {{screen.texts.buttonText}}
    </button>
  </form>
</div>
