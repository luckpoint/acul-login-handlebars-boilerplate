{{! Content container - for layout adjustment only }}
<div class="max-w-2xl mx-auto px-4">
  {{! Content holder - for visual styling only }}
  <div class="bg-white rounded-xl shadow-lg border border-gray-100">
    {{! Title section }}
    <header class="p-6 pb-4">
      <h1 class="text-2xl font-bold text-center text-gray-900">
        {{screen.texts.title}}
      </h1>
    </header>
    
    {{! Error messages section }}
    {{> shared/error-messages}}
    
    {{! Existing identifier display section }}
    {{#if hasEmail}}
    {{> shared/identifier-field 
      label=screen.texts.emailPlaceholder
      value=emailValue
      editUrl=screen.links.edit_identifier
      editText=screen.texts.editEmailText
      icon='<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 12a4 4 0 10-8 0 4 4 0 008 0zm0 0v1.5a2.5 2.5 0 005 0V12a9 9 0 10-9 9m4.5-1.206a8.959 8.959 0 01-4.5 1.207"></path>'
    }}
    {{/if}}

    {{#if hasPhone}}
    {{> shared/identifier-field 
      label=screen.texts.phonePlaceholder
      value=phoneValue
      editUrl=screen.links.edit_identifier
      editText=screen.texts.editPhoneText
      icon='<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"></path>'
    }}
    {{/if}}

    {{#if hasUsername}}
    {{> shared/identifier-field 
      label=screen.texts.usernamePlaceholder
      value=usernameValue
      editUrl=screen.links.edit_identifier
      editText=screen.texts.editUsernameText
      icon='<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path>'
    }}
    {{/if}}

    {{! Form content }}

    <form id="signup-password-form" class="p-6" role="form">
      <fieldset class="flex flex-col gap-y-5">
        
        {{! Password input field }}
        {{> passwordField 
          fieldId="password"
          name="password"
          label=screen.texts.passwordPlaceholder
          placeholder=screen.texts.passwordPlaceholder
          autocomplete="new-password"
          required=true
        }}

        {{! Submit button }}
        <button
          type="submit"
          id="btnSignup"
          class="w-full py-3 px-4 text-lg font-medium text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500 rounded-lg transition-colors duration-200"
        >
          {{screen.texts.buttonText}}
        </button>
      </fieldset>
    </form>

    {{! Footer navigation }}
    <footer class="p-6 pt-4 border-t border-gray-100">
      <nav class="text-center">
        <a href="{{screen.loginLink}}" id="goToLogin" class="text-lg text-indigo-600 hover:text-indigo-500">
          {{screen.texts.loginActionText}}
        </a>
      </nav>
    </footer>
  </div>
</div>
