{{! Identifier Display Field - For displaying existing identifiers like Email/Username/Phone etc. }}
<section class="px-6 pb-4">
  <label class="block text-lg font-medium text-gray-700 mb-2">{{label}}</label>
  <div class="p-4 bg-gray-50 rounded-lg border flex items-center justify-between">
    <div class="flex items-center gap-x-3">
      <svg class="w-5 h-5 text-gray-500" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
        {{{icon}}}
      </svg>
      <span class="text-lg text-gray-700">{{value}}</span>
    </div>
    <button type="button" class="text-lg text-indigo-600 hover:text-indigo-500" onclick="window.location.href = '{{editUrl}}'">
      {{editText}}
    </button>
  </div>
</section>
